<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modul31">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/logo" />


        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gambar"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:text="Total"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/total"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="Bayar"
            android:textSize="15dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/kembalian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bayar"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Kembalian"
            android:textSize="15dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/total2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gambar"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="18dp"
            android:text=""/>

        <EditText
            android:id="@+id/bayar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/total2"
            android:layout_toRightOf="@id/total"
            android:layout_marginLeft="80dp"
            android:text=""
            android:inputType="number"/>

        <TextView
            android:id="@+id/kembalian2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bayar2"
            android:layout_toRightOf="@id/kembalian"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="53dp"
            android:text=""/>

        <Button
            android:id="@+id/cek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kembalian"
            android:layout_marginTop="15dp"
            android:layout_marginRight="-95dp"
            android:background="@android:color/holo_green_dark"
            android:onClick="bayar"
            android:text="bayar"
            android:textStyle="bold" />


    </RelativeLayout>
</ScrollView>